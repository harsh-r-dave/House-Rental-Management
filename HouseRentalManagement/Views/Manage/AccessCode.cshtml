@model HouseRentalManagement.Models.ManageViewModels.AccessCodeViewModel
@{
	ViewData["Title"] = "Access Code";
	ViewData.AddActivePage(ManageNavPages.AccessCode);
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
	<div class="col-md-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="CurrentAccessCode"></label>
				<input asp-for="CurrentAccessCode" class="form-control" />
				<span asp-validation-for="NewAccessCode" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="NewAccessCode"></label>
				<input asp-for="NewAccessCode" class="form-control" />
				<span asp-validation-for="NewAccessCode" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
