@using HouseRentalManagement.Classes
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	
	<meta name="keywords" content="jigna homes, rooms in barrie, rooms near georgian college, indian room rental in barrie, room for student, student room rental in barrie, real estate" />
	<meta name="description" content="We specialize in Indian Students Rentals since 2002. We provide friendly environment to the students and workers away from their home." />

	<title>@ViewData["Title"] Jigna Real Estate Holding Co.</title>

	@* vendors *@
	<link href="~/lib/animate/animate.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
	<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

	<!--favicon-->
	<link href="~/icons/brand-logo.png" rel="icon" asp-append-version="true" />

	@* global styles *@
	<link href="~/css/style-override.css" rel="stylesheet" asp-append-version="true" />

	@* page-specific styles *@
	@RenderSection("Styles", required: false)
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a asp-area="" asp-controller="House" asp-action="Index" class="navbar-brand">
					<img alt="Brand" src="~/icons/brand-logo-1.png">
					@*<span>Jigna Real Estate Holding Co.</span>*@
				</a>
			</div>
			<div class="navbar-collapse collapse" id="navbar-collapse-container">
				<ul class="nav navbar-nav">
					<li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
					<li><a href="/#contact-us" id="contact-us-link">Contact</a></li>
				</ul>
				@await Html.PartialAsync("_LoginPartial")
			</div>
		</div>
	</nav>

	<div id="jhr-page">
		@RenderBody()
	</div>

	<div class="container">
		<!-- footer -->
		<footer>
			<p class="footer">&copy; 2018 - Jigna Real Estate Holding Co.</p>
		</footer>
	</div>

	@* vendor scripts *@
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/vendors/jquery.easing.1.3.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/lib/toastr/toastr.js"></script>
	<script src="~/js/toastr-config.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script>
		$(document).ready(function () {
			Hrm.SiteJs.init();
		});
	</script>

	@* scripts *@
	@await Html.PartialAsync("_ValidationScriptsPartial")
	@RenderSection("Scripts", required: false)

	@await Component.InvokeAsync(Constants.ViewComponentKeys.SiteMessageView)
</body>
</html>
