@model HouseRentalManagement.Models.InquiryViewModels.ListInquiryViewModel

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-responsive table-hover inquiry-table">
				<thead>
					<tr>
						<th>Name</th>
						<th>Phone Number</th>
						<th>Email Address</th>
						<th class="text-center">Read?</th>
						<th class="text-center">Message</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Inquiries)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.PhoneNumber</td>
							<td>@item.Email</td>
							<td class="text-center">
								@if (item.IsRead)
								{<i class="fa fa-check"></i>}
								else
								{<i class="fa fa-close"></i>}
							</td>
							<td class="text-center">
								<a class="btn btn-primary" onclick="Hrm.InquiryIndex.loadMessage('@item.InquiryId');"><i class="fa fa-ellipsis-h"></i></a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>