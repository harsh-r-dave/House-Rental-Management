@{
	Layout = "~/views/shared/_HouseLayout.cshtml";
}
@model HouseRentalManagement.Models.AdminViewModels.AddTenantViewModel
@using HouseRentalManagement.Data.Interface
@inject IHouseRepository HouseRepository

<div class="container">
	<div class="row">
		<div class="col-md-12"><h3>@ViewData["Title"]</h3></div>
	</div>
	@*asp-action="AddTenant" asp-controller="Admin"*@
	<form action="@ViewData["ReturnUrl"]" method="post">
		<div class="row">
			<div class="col-md-5">
				<input asp-for="TenantId" />
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="FirstName"></label> <span class="required">*</span>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input asp-for="FirstName" class="form-control" placeholder="John" />
						</div>
						<span asp-validation-for="FirstName" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="LastName"></label> <span class="required">*</span>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input asp-for="LastName" class="form-control" placeholder="Doe" />
						</div>
						<span asp-validation-for="LastName" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="PhoneNumber"></label> <span class="required">*</span>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-phone"></i></span>
							<input asp-for="PhoneNumber" class="form-control" placeholder="6471234567" />
						</div>
						<span asp-validation-for="PhoneNumber" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="Occupation"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-briefcase"></i></span>
							<input asp-for="Occupation" class="form-control" placeholder="IT Professional" />
						</div>
						<span asp-validation-for="Occupation" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="Email"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-at"></i></span>
							<input asp-for="Email" class="form-control" placeholder="someone@domain.com" />
						</div>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="col-md-5">
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="ReferenceName"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-user"></i></span>
							<input asp-for="ReferenceName" class="form-control" placeholder="John Doe" />
						</div>
						<span asp-validation-for="ReferenceName" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="ReferencePhone"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-phone"></i></span>
							<input asp-for="ReferencePhone" class="form-control" placeholder="6471234567" />
						</div>
						<span asp-validation-for="ReferencePhone" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="ReferenceEmail"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-at"></i></span>
							<input asp-for="ReferenceEmail" class="form-control" placeholder="someone@domain.com" />
						</div>
						<span asp-validation-for="ReferenceEmail" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label asp-for="HouseId"></label>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-home"></i></span>
							<select asp-for="HouseId" asp-items="@(new SelectList(await HouseRepository.ListHousesAsync(), "HouseId", "AddressLine1"))" class="form-control">
								<option value="">-- Select House --</option>
							</select>
						</div>
						<span asp-validation-for="HouseId" class="text-danger"></span>
					</div>
				</div>
				<div class="row form-group">
					<div class="col-md-12">
						<label>
							<label asp-for="IsOnWaitList"></label>
							<input asp-for="IsOnWaitList" />
						</label>
						<span asp-validation-for="IsOnWaitList" class="text-danger"></span>
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-20">
			<div class="col-md-12">
				<button class="btn btn-primary">Save</button>
				<a class="btn btn-danger" asp-action="Tenants" asp-controller="Admin">Cancel</a>
			</div>
		</div>
	</form>
</div>

@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}