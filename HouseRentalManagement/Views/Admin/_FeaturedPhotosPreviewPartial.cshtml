@model HouseRentalManagement.Models.AdminViewModels.ListFeaturedPhotoViewModel

@if (Model.featuredPhotosCollection == null || Model.featuredPhotosCollection.Count == 0)
{
	<div class="row">
		<div class="col-md-12">
			<span class="text-danger">No active featured photos found. Please select some photos to be displayed.</span>
		</div>
	</div>
}
else
{
	<div id="preview-carousel" class="carousel slide mt-20" data-ride="carousel" data-interval="3000">
		<ol class="carousel-indicators">
			@if (Model.featuredPhotosCollection != null)
			{
				int index = 0;
				foreach (var photo in Model.featuredPhotosCollection)
				{
					<li data-target="#preview-carousel" data-slide-to="@index" class="@string.Format(index == 0 ? "active" : "")"></li>
					index++;
				}
			}
		</ol>
		<div class="carousel-inner" role="listbox">
			@if (Model.featuredPhotosCollection != null)
			{
				int index = 0;
				foreach (var photo in Model.featuredPhotosCollection)
				{
					<div class="@string.Format(index == 0 ? "item active" : "item")">
						<img src="@photo.FilePath" alt="" class="img-responsive carousel-image" />
					</div>
					index++;
				}
			}
		</div>
		<a class="left carousel-control" href="#preview-carousel" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#preview-carousel" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
}