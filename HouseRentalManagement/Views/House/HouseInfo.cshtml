@{
    Layout = "_HouseLayout";
}

@section Styles{
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/lib/fancybox/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/css/pages/house-index1.css" rel="stylesheet" />
}

<div class="container">
    <div class="house-info">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="house-title">
                        123 Main Street
                        <span class="rent-amount">$350/ month</span>
                    </div>
                </div>
                <div class="row">
                    1 room is available in the basement. Reference required.
                </div>
                <div class="row facility-container">
                    <label>Facilities: </label>
                    <span>Wi-Fi</span>
                    <span class="facility-label">on-site laundry</span>
                    <span class="facility-label">heat/ AC</span>
                    <span class="facility-label">microwave oven</span>
                    <span class="facility-label">fridge</span>
                </div>
                <div class="row facility-container">
                    <label>Not Allowed: </label>
                    <span>Pets</span>
                    <span class="facility-label">smoke/ alcohol</span>
                    <span class="facility-label">guest overnight stay</span>
                    <span class="facility-label">late night parties inside house</span>
                </div>
            </div>
            <div class="col-md-4">
                <div id="house-location"></div>
            </div>
        </div>
    </div>
    <hr />
    <div id="jhr-portfolio-section" class="mt-20">
        <div id="portfoliolist" class="bounceIn">
            <div class="row">
                @for (int i = 0; i < 2; i++)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a class="house-image" href="~/images/testimages/20180331_121713.jpg">
                                <div class="portfolio-wrapper">
                                    <img src="~/images/testimages/20180331_121713.jpg" alt="" />
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a class="house-image" href="~/images/testimages/20180330_121325.jpg">
                                <div class="portfolio-wrapper">
                                    <img src="~/images/testimages/20180330_121325.jpg" alt="" />
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a class="house-image" href="~/images/testimages/20180331_142913.jpg">
                                <div class="portfolio-wrapper">
                                    <img src="~/images/testimages/20180331_142913.jpg" alt="" />
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/fancybox/jquery.fancybox.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&key=AIzaSyBcH3xWHIKvmtjH-0Xs9E9zI8KG9C7bY8w "
            type="text/javascript"></script>
    <script src="~/js/pages/house-info.js"></script>
    <script>
        $(document).ready(function () {
            var houseInfoModel = {
                location: "368 Dunsmore Ln, Barrie"
            };
            Hrm.HouseInfo.init(houseInfoModel);
        });
    </script>
}
