@{
    Layout = "_HouseLayout";
}

@section Styles{
    <link href="~/css/pages/house-index1.css" rel="stylesheet" />
}

<div class="container">
    <div id="myCarousel" class="carousel slide mt-20" data-ride="carousel" data-interval="4000">
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/testimages/20180330_121325.jpg" alt="" class="img-responsive carousel-image" />
                <div class="carousel-caption" role="option">
                    <p>
                        Hurry up <br /> Only few rooms left !!
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/testimages/20180330_162115.jpg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    @for (int i = 0; i < 10; i++)
                    {
                        <p>
                            Providing a good accomodation to the students and workers since 2012. <br />
                            Many students are living in our many houses close to georgian college.
                        </p>
                    }
                </div>
            </div>
            <div class="item">
                <img src="~/images/testimages/20180331_142913.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Some promotion here!!
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="jhr-portfolio-section" class="mt-20">
        <div id="portfoliolist" class="">
            <div class="row">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a asp-action="HouseInfo" asp-controller="House"><div class="portfolio-wrapper">
                                <img src="~/images/testimages/20180331_121713.jpg" alt="" />
                                <div class="label">
                                    <div class="label-text">
                                        <label class="text-title">123 Main Street</label>
                                        <span class="text-category">$350/ mo</span>
                                    </div>
                                    <div class="label-bg"></div>
                                </div>
                            </div></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a asp-action="HouseInfo" asp-controller="House">
                                <div class="portfolio-wrapper">
                                    <img src="~/images/testimages/20180330_121325.jpg" alt="" />
                                    <div class="label">
                                        <div class="label-text">
                                            <label class="text-title">31 Tapscott Road</label>
                                            <span class="text-category">$415/ mo</span>
                                        </div>
                                        <div class="label-bg"></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 mt-10">
                        <div class="portfolio">
                            <a href="javascript:void(0)"><div class="portfolio-wrapper">
                                <img src="~/images/testimages/20180331_142913.jpg" alt="" />
                                <div class="label">
                                    <div class="label-text">
                                        <label class="text-title">Some Other Big House</label>
                                        <span class="text-category">$1750/ mo</span>
                                    </div>
                                    <div class="label-bg"></div>
                                </div>
                            </div></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
