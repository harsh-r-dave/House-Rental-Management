	<div class="row" id="contact-us-container">
		<div class="col-md-12 contact-us-container">
			<div class="row">
				<div class="col-md-offset-2 col-md-8 text-center">
					<h3>Let's Talk</h3>
					<small>Got a question? We'd love to hear from you. Send us a message and we'll respond as soon as possible.</small>
				</div>
			</div>
			<div class="row mt-20">
				<form asp-action="" asp-controller="Admin" method="post" id="contact-us-form">
					<div class="row form-group">
						<div class="col-md-offset-2 col-md-2 text-right">
							<label>Name: </label> <span class="required">*</span>
						</div>
						<div class="col-md-6">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-user"></i></span>
								<input class="form-control" placeholder="Name" />
							</div>
							<span class="text-danger"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-offset-2 col-md-2 text-right">
							<label>Email: </label> <span class="required">*</span>
						</div>
						<div class="col-md-6">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-at"></i></span>
								<input class="form-control" placeholder="Email Address" />
							</div>
							<span class="text-danger"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-offset-2 col-md-2 text-right">
							<label>Message: </label> <span class="required">*</span>
						</div>
						<div class="col-md-6">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
								<input class="form-control" placeholder="Message" />
							</div>
							<span class="text-danger"></span>
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-offset-2 col-md-8 text-center">
							<input type="button" class="btn btn-primary" value="Submit" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

